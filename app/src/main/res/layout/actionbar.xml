<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:elevation="@dimen/elevacion_action"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/baidu_logotipo_de_la_pata"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colortext"
            android:layout_marginLeft="20dp"
            android:text="@string/app_name"
            android:textSize="20dp"
            android:fontFamily="@string/app_name"
            android:layout_gravity="center"
            android:textStyle="bold"/>
        <ImageView
            android:onClick="irMascotasFavoritas"
            android:id="@+id/MascotasFavoritos"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/star_hotel_48"
            android:layout_marginLeft="80dp" />
    </LinearLayout>




</android.support.v7.widget.Toolbar>